# ============================================
# PostgreSQL Database Configuration
# ============================================
PGHOST=your-db-host.postgres.database.azure.com
PGPORT=5432
PGDATABASE=your-database-name
PGUSER=your-db-username
PGPASSWORD=your-db-password

# Alternative: Full Database URL (if using this, individual PG* vars will be ignored)
DATABASE_URL=postgresql://username:password@host:5432/database?sslmode=require

# ============================================
# Google OAuth Configuration
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_REDIRECT_URI=https://api.advotac.com/auth/google/callback

# ============================================
# JWT Configuration
# ============================================
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# Application URLs
# ============================================
FRONTEND_URL=https://advotac.com/
BACKEND_URL=https://api.advotac.com/

# ============================================
# Azure OpenAI Configuration
# ============================================

# Azure OpenAI Endpoint and Authentication
AZURE_OPENAI_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# Azure OpenAI Deployment Names
AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME=text-embedding-3-small
AZURE_OPENAI_CHAT_DEPLOYMENT_NAME=your-chat-deployment-name

# Analysis Deployments (Standard & Pro)
AZURE_OPENAI_ANALYSIS=gpt-5-mini
AZURE_OPENAI_ANALYSIS_PRO=gpt-5

# Base Deployments (Standard & Pro)
AZURE_OPENAI_BASE=gpt-5-mini
AZURE_OPENAI_BASE_PRO=gpt-5

# Summary Deployments (Standard & Pro)
AZURE_OPENAI_SUMMARY=gpt-5-mini
AZURE_OPENAI_SUMMARY_PRO=gpt-5

# Translate Deployments (Standard & Pro)
AZURE_OPENAI_TRANSLATE=gpt-5-mini
AZURE_OPENAI_TRANSLATE_PRO=gpt-5

# ============================================
# Qdrant Vector Database Configuration
# ============================================

# Qdrant Cloud/Remote Configuration
QDRANT_URL=http://your-qdrant-host:6333/
QDRANT_API_KEY=

# Qdrant Collection Name
QDRANT_COLLECTION=your-collection-name

# ============================================
# LangChain/LangSmith Configuration
# ============================================

# LangChain API Key
LANGCHAIN_API_KEY=your-langchain-api-key

# LangSmith Tracing
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=your-project-name

# Alternative LangSmith Key (if needed)
LANGSMITH=your-langsmith-api-key

# ============================================
# Redis Configuration (for Celery/Queue)
# ============================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================
# Application Settings
# ============================================

# Environment
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Credits System
STANDARD_MODE_CREDITS=2
ADVANCED_MODE_CREDITS=5

# ============================================
# AI Processing Settings
# ============================================

# Model Selection (standard or pro)
DEFAULT_MODEL_MODE=standard

# Processing Limits
MAX_QUERY_LENGTH=5000
MAX_CONTEXT_LENGTH=10000
REQUEST_TIMEOUT=300

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_PER_HOUR=100

# ============================================
# File Storage Configuration
# ============================================

# Upload Settings
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=pdf,doc,docx,txt

# Output Storage
OUTPUT_DIR=./outputs
TEMP_DIR=./temp

# ============================================
# Feature Flags
# ============================================
ENABLE_ASSISTANT=true
ENABLE_RESEARCH=true
ENABLE_DRAFTING=true
ENABLE_WORKFLOW=true
ENABLE_PDF_GENERATION=true
ENABLE_DOCS_GENERATION=true
